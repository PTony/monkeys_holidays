{% extends 'base.html.twig' %}

{% block body %}
    <h1>La liste des groupes</h1>

    <table>
        <thead>
            <tr>
                <th>Numero</th>
                <th>Nom du groupe</th>
                <th>parametre</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td><a href="{{ path('groups_show', { 'id': group.id }) }}">{{ group.id }}</a></td>
                <td>{{ group.groupName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('groups_show', { 'id': group.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('groups_edit', { 'id': group.id }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groups_new') }}">Créer un nouveau groupe</a>
        </li>
    </ul>
{% endblock %}
